{% extends "_layout.jinja2" %}

{% block article %}
  <table>
    <thead>
      <tr>
        <th>Domain
        <th>View
    <tbody>
      <tr>
        <td>Tous</td>
        <td><a href="{{ url_for('site', site='*') }}">Go</a></td>
      </tr>
      {% for site in sites %}
        {% if site %}
          <tr>
            <td>{{ site }}</td>
            <td><a href="{{ url_for('site', site=site) }}">Go</a></td>
          </tr>
        {% endif %}
      {% endfor %}
    </tbody>
  </table>
{% endblock article %}
