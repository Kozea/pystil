{% extends "_layout.jinja2" %}

{% block article %}
  <table>
    <thead>
      <tr>
        <th>Visits</th>
        <th>Domain</th>
        <th>View</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{ all_ }}</td>
        <td>All</td>
        <td><a href="{{ url_for('site', site='*') }}">Go</a></td>
      </tr>
      {% for site in sites %}
        {% if site %}
          <tr>
            <td>{{ site.count }}</td>
            <td>{{ site.key }}</td>
            <td><a href="{{ url_for('site', site=site.key) }}">Go</a></td>
          </tr>
        {% endif %}
      {% endfor %}
    </tbody>
  </table>
{% endblock article %}
