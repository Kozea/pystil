{% extends "_layout.jinja2" %}

{% block article %}
  <article class="sites">
    <table>
      <thead>
        <tr>
          <th>Visits</th>
          <th>Domain</th>
          <th>Stats</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{ all_ }}</td>
          <td>All</td>
          <td><a href="{{ url_for('site', site='all') }}">Go</a></td>
        </tr>
        {% for site in sites %}
          {% if site and site.key %}
            <tr>
              <td>{{ site.count }}</td>
              <td>{{ site.key }}</td>
              <td><a href="{{ url_for('site', site=site.key) }}">Go</a></td>
            </tr>
          {% endif %}
        {% endfor %}
      </tbody>
    </table>
  </article>
  <aside class="last-visits"></aside>
{% endblock article %}
