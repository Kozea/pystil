{% extends "_layout.jinja2" %}

{% block article %}
  <article class="dates">
    <label for="from">From: </label><input id="from" type="text" class="datepicker" />
    <label for="to">To: </label><input id="to" type="text" class="datepicker" />
  </article>
  <article id="graphs" class="tabs">
    <h2>On site {{ site }}</h2>
    <nav>
      <ul>
        <li><a href="#visits">Visits</a></li>
        <li><a href="#time">Time</a></li>
        <li><a href="#map">Worldmap</a></li>
        <li><a href="#pages">Pages</a></li>
        <li><a href="#visitor">Visitor</a></li>
        <li><a href="#misc">Misc</a></li>
      </ul>
    </nav>
    <section id="visits" class="tab">
      <div class="graph" data-graph="Last" data-criteria="all"></div>
      <div class="graph" data-graph="Line" data-criteria="new,unique,all"></div>
    </section>
    <section id="time" class="tab">
      <div class="graph" data-graph="Bar" data-criteria="hour"></div>
      <div class="graph" data-graph="Time" data-criteria="spent_time"></div>
    </section>
    <section id="map" class="tab">
      <div class="graph" data-graph="Map" data-criteria="all"></div>
    </section>
    <section id="pages" class="tab">
      {% if site == 'all' %}
        <div class="graph" data-graph="Pie" data-criteria="host"></div>
      {% else %}
        <div class="graph" data-graph="Pie" data-criteria="page"></div>
        <div class="graph" data-graph="Pie" data-criteria="hash"></div>
      {% endif %}
      <div class="graph" data-graph="Pie" data-criteria="referrer_domain"></div>
    </section>
    <section id="visitor" class="tab">
      <div class="graph" data-graph="Pie" data-criteria="browser_name"></div>
      <div class="graph" data-graph="Pie" data-criteria="browser_name_version"></div>
      <div class="graph" data-graph="Pie" data-criteria="size"></div>
      <div class="graph" data-graph="Pie" data-criteria="platform"></div>
    </section>
    <section id="misc" class="tab">
      <div class="graph" data-graph="Pie" data-criteria="country"></div>
      <div class="graph" data-graph="Pie" data-criteria="day"></div>
      <div class="graph" data-graph="Pie" data-criteria="ip"></div>
    </section>
  </article>
{% endblock article %}
