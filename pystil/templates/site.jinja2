{% extends "_layout.jinja2" %}

{% block article %}
  <article class="dates">
    <label for="from">From: </label><input id="from" type="text" class="datepicker" />
    <label for="to">To: </label><input id="to" type="text" class="datepicker" />
  </article>
  <article id="graphs" class="pystil-tabs">
    <h2>On site {{ site }}</h2>
    <nav>
      <ul>
        <li><a href="#visits">Visits</a></li>
        <li><a href="#time">Time</a></li>
        <li><a href="#map">Worldmap</a></li>
        <li><a href="#pages">Pages</a></li>
        <li><a href="#visitor">Visitor</a></li>
        <li><a href="#misc">Misc</a></li>
      </ul>
    </nav>
    <section id="visits" class="tab">
      {# <figure> #}
      {#   <div class="graph" data-graph="Last" data-criteria="all"></div> #}
      {#   <figcaption>Real time last visits</figcaption> #}
      {# </figure> #}
      <figure>
        <embed type="image/svg+xml" src="/data/load/Line/all.svg" data-type="Line" data-criteria="all" data-site="{{ site }}" />
      </figure>
      {# <figure> #}
      {#   <div class="graph" data-graph="Top" data-criteria="subdomain"></div> #}
      {#   <figcaption>Top subdomains</figcaption> #}
      {# </figure> #}
    </section>
    <section id="time" class="tab">
      <figure>
        <embed type="image/svg+xml" src="/data/load/Bar/hour.svg" data-type="Bar" data-criteria="hour" data-site="{{ site }}" />
      </figure>
      {# <figure> #}
      {#   <div class="graph" data-graph="Time" data-criteria="spent_time"></div> #}
      {#   <figcaption>Time spent on site</figcaption> #}
      {# </figure> #}
    </section>
    <section id="map" class="tab">
      {# <figure> #}
      {#   <div class="graph" data-graph="Map" data-criteria="all"></div> #}
      {#   <figcaption>World map of visits</figcaption> #}
      {# </figure> #}
    </section>
    <section id="pages" class="tab">
      {% if site == 'all' %}
        <figure>
          <embed type="image/svg+xml" src="/data/load/Pie/host.svg" data-type="Pie" data-criteria="host" data-site="all" />
        </figure>
      {% else %}
        <figure>
          <embed type="image/svg+xml" src="/data/load/Pie/page.svg" data-type="Pie" data-criteria="page" data-site="{{ site }}" />
        </figure>
        <figure>
          <embed type="image/svg+xml" src="/data/load/Pie/hash.svg" data-type="Pie" data-criteria="hash" data-site="{{ site }}" />
        </figure>
      {% end %}
      <figure>
        <embed type="image/svg+xml" src="/data/load/Pie/referrer_domain.svg" data-type="Pie" data-criteria="referrer_domain" data-site="{{ site }}" />
      </figure>
    </section>
    <section id="visitor" class="tab">
      <figure>
        <embed type="image/svg+xml" src="/data/load/Pie/browser_name.svg" data-type="Pie" data-criteria="browser_name" data-site="{{ site }}" />
      </figure>

      <figure>
        <embed type="image/svg+xml" src="/data/load/Pie/browser_name_version.svg" data-type="Pie" data-criteria="browser_name_version" data-site="{{ site }}" />
      </figure>

      <figure>
        <embed type="image/svg+xml" src="/data/load/Pie/size.svg" data-type="Pie" data-criteria="size" data-site="{{ site }}" />
      </figure>

      <figure>
        <embed type="image/svg+xml" src="/data/load/Pie/platform.svg" data-type="Pie" data-criteria="platform" data-site="{{ site }}" />
      </figure>
    </section>
    <section id="misc" class="tab">
      <figure>
        <embed type="image/svg+xml" src="/data/load/Pie/country.svg" data-type="Pie" data-criteria="country" data-site="{{ site }}" />
      </figure>

      <figure>
        <embed type="image/svg+xml" src="/data/load/Pie/day.svg" data-type="Pie" data-criteria="day" data-site="{{ site }}" />
      </figure>

      <figure>
        <embed type="image/svg+xml" src="/data/load/Pie/ip.svg" data-type="Pie" data-criteria="ip" data-site="{{ site }}" />
      </figure>
    </section>
  </article>
{% end %}
